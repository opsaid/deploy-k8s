apiVersion: v1
kind: Config
preferences: {}
current-context: system:node:{{ hostvars[inventory_hostname]['ip'] }}@{{ cluster_name }}
clusters:
- cluster:
    certificate-authority: /etc/kubernetes/pki/apiserver.crt
    server: {{ apiserver_addr }}
  name: {{ cluster_name }}
contexts:
- context:
    cluster: {{ cluster_name }}
    user: system:node:{{ hostvars[inventory_hostname]['ip'] }}
  name: system:node:{{ hostvars[inventory_hostname]['ip'] }}@{{ cluster_name }}
users:
- name: system:node:{{ hostvars[inventory_hostname]['ip'] }}
  user:
    client-certificate: /etc/kubernetes/pki/kubelet-client-current.crt
    client-key: /etc/kubernetes/pki/kubelet-client-current.key
